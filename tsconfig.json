{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ES2020",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    // "importHelpers": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": "./",
    "outDir": "./lib",
    "declaration": true,
    "strict": true,
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "paths": {
      "@solana/spl-token": ["node_modules/@solana/spl-token"] // @metaflex/js has a much lower version reference
    },
  },
  "include": ["jest.config.js",".fatherrc.ts","src/**/*","test/**/*","readme.md"],
  "exclude": ["node_modules", "**/node_modules/*", "lib/", "es/", "dist/","build/", "docs"]
}
